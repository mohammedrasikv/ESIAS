<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >
    <RelativeLayout
        android:id="@+id/slidebartop"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/maincolor"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"

            />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/newlogo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/dotslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            >




        </LinearLayout>




    </RelativeLayout>
    <FrameLayout
        android:layout_below="@id/slidebartop"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/gradientbot"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/maincolor"
        android:layout_below="@id/slidebartop"
        >

        <LinearLayout
            android:layout_width="340dp"
            android:layout_centerHorizontal="true"
            android:layout_height="340dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"

                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/syllabusbtn"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    >
                    <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow"
                       >
                       <ImageView
                           android:id="@+id/bookpng"
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:src="@drawable/books"
                           android:layout_centerHorizontal="true"
                           android:layout_marginTop="20dp"

                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/bookpng"
                           android:text="Syllabus"
                           android:gravity="center"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:layout_margin="5dp"
                           android:textColor="#00832F"
                           app:autoSizeTextType="uniform"
                           app:autoSizeMinTextSize="10sp"
                           app:autoSizeMaxTextSize="13sp"
                           />


                   </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:background="@drawable/buttonpublicwindow"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow"
                        android:layout_gravity="start"


                        >
                        <ImageView
                            android:id="@+id/notesonepng"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/notes"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/notesonepng"
                            android:text="Question Paper"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="13sp"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="20dp"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"
                    >
                    <ImageView
                        android:id="@+id/notespng"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/notes"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/notespng"
                        android:text="Notes"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#00832F"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"

                        />


                </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:layout_weight="1"

                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"
                    android:layout_gravity="start"

                    >
                    <ImageView
                        android:id="@+id/classroom"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/onlineclass"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/classroom"
                        android:text="Online Classroom"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="#00832F"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"/>


                </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/collegeofficial"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="20dp"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"
                    android:layout_gravity="start"


                    >
                    <ImageView
                        android:id="@+id/collegepng"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/collegepng"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/collegepng"
                        android:text="College Official Website"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="#00832F"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"
                        />


                </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/examresult"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"

                    >
                    <ImageView
                        android:id="@+id/resultpng"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/resulticon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/resultpng"
                        android:text="Examination Result"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#00832F"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"

                        />


                </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_marginTop="20dp"

                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/ourteams"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"
                    android:layout_gravity="start"

                    >
                    <ImageView
                        android:id="@+id/ourteam"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/teamicon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ourteam"
                        android:text="Our Team"

                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="#00832F"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"/>


                </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="20dp"

                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"

                    >
                    <ImageView
                        android:id="@+id/notificationpng"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/notificationbell"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/notificationpng"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="Notifications"
                        android:textColor="#00832F"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"
                        android:textStyle="bold" />


                </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="32dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="20dp"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonpublicwindow"


                    >
                    <ImageView
                        android:id="@+id/aboutpng"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/aboutpng"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aboutpng"
                        android:text="About"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="#00832F"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="13sp"
                        />


                </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>




    </RelativeLayout>



</RelativeLayout>